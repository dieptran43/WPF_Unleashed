<Window x:Class="WPF_Unleashed._4_ProfessionalTools._12_Resources.StaticDynamicResources"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StaticDynamicResources" Height="300" Width="300">
    <Window.Resources>
        <Image x:Shared="False" x:Key="zoom" Height="21" Source="Images/zoom.gif"/>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <!-- Теперь многократное применение ресурса работает! -->
            <StaticResource ResourceKey="zoom"/>
            <StaticResource ResourceKey="zoom"/>
            <StaticResource ResourceKey="zoom"/>
        </StackPanel>
    </Grid>
</Window>
