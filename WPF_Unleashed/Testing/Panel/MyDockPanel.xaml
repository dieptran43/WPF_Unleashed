<Window x:Class="WPF_Unleashed.Testing.Panel.MyDockPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MyDockPanel" Height="300" Width="300">
    <Grid>
        <DockPanel>
            <Button DockPanel.Dock="Top" HorizontalAlignment="Right" Background="Red">
                1 (Top, Align=Right)
            </Button>
            <Button DockPanel.Dock="Left" VerticalAlignment="Bottom" Background="Orange">
                2 (Left, Align=Bottom)
            </Button>
            <Button DockPanel.Dock="Right" VerticalAlignment="Bottom" Background="Yellow">
                3 (Right, Align=Bottom)
            </Button>
            <Button DockPanel.Dock="Bottom" HorizontalAlignment="Right" Background="Lime">
                4 (Bottom, Align=Right)
            </Button>
            <Button Background="Aqua">
                5
            </Button>
        </DockPanel>
    </Grid>
</Window>
