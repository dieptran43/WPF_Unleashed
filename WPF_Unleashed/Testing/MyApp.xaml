<Window x:Class="WPF_Unleashed.Testing.MyApp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MyApp" Height="500" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Menu" HorizontalContentAlignment="Center" Grid.ColumnSpan="3" BorderThickness="1" BorderBrush="Blue"/>
        <Label Grid.Row="1" Grid.Column="0" Content="Input Transports" BorderThickness="1" BorderBrush="Blue"/>
        <Label Grid.Row="1" Grid.Column="1" Content="Data" HorizontalContentAlignment="Center" BorderThickness="1" BorderBrush="Blue"/>
        <Label Grid.Row="1" Grid.Column="2" Content="Output Transports" BorderThickness="1" BorderBrush="Blue"/>
        <Label Grid.Row="3" Grid.Column="0" Content="Status" HorizontalContentAlignment="Center" Grid.ColumnSpan="3" BorderThickness="1" BorderBrush="Blue"/>
    </Grid>
</Window>
