<Window x:Class="WPF_Unleashed._3_Control_Elements._10_ManyChildElements.ListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ListView" Height="300" Width="300">
    <Grid>
        <ListView HorizontalAlignment="Left" Height="162" Margin="10,10,0,0" VerticalAlignment="Top" Width="182">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Date"/>
                    <GridViewColumn Header="Day of Week"
DisplayMemberBinding="{Binding DayOfWeek}"/>
                    <GridViewColumn Header="Year" DisplayMemberBinding="{Binding Year}"/>
                </GridView>
            </ListView.View>
            1/1/2012
            1/2/2012
            1/3/2012
        </ListView>

    </Grid>
</Window>
